# Microsoft Teams Bot Configuration
# Copy this to .env and fill in your actual values

# Bot Framework Credentials (from Azure Bot Service)
MicrosoftAppId=YOUR_BOT_APP_ID_HERE
MicrosoftAppPassword=YOUR_BOT_APP_PASSWORD_HERE

# Bot Service Configuration
BOT_NAME=workforce-management-bot
BOT_ENDPOINT=https://your-ngrok-url.ngrok.io/api/messages

# Application Settings
PORT=3978
ENVIRONMENT=development

# Workforce Management System Configuration
GEMINI_API_KEY=your_google_gemini_api_key_here
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Azure Configuration
AZURE_TENANT_ID=YOUR_TENANT_ID_HERE
AZURE_CLIENT_ID=YOUR_CLIENT_ID_HERE
AZURE_CLIENT_SECRET=YOUR_CLIENT_SECRET_HERE

# Teams App Configuration
TEAMS_APP_ID=YOUR_TEAMS_APP_ID_HERE
TEAMS_APP_PASSWORD=YOUR_TEAMS_APP_PASSWORD_HERE

# Logging Configuration
LOG_LEVEL=INFO
DEBUG=true

# Optional: Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_app_insights_key_here 